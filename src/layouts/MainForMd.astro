---
import type { MarkdownLayoutProps } from 'astro';

import Layout from "./Main.astro";


type Props = MarkdownLayoutProps<{
  // フロントマターのpropsをここで定義します
  title: string; description: string;
  useHljs?: boolean; metadataHtml: string;
}>;


const { title, description, useHljs, metadataHtml } = Astro.props.frontmatter;
---
<Layout title={title} description={description}
    useHljs={useHljs} metadataHtml={metadataHtml}>
  <slot />
</Layout>